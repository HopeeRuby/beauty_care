<h1 class="fw-bold d-flex justify-content-center my-5">Danh sách công ty</h1>
<div class="mb-3">
  <%= link_to 'Danh sách người dùng', users_path, class: "btn btn-primary" %>
</div>
<div class="mb-3">
  <%= link_to 'Thêm mới công ty', new_company_path, class: "btn btn-success" %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.location %></td>
        <td class="btn "><%= link_to 'Show', company_path(company), class: 'btn btn-primary'%></td>
        <td class="btn "><%= link_to 'Edit', edit_company_path(company), class: 'btn btn-success'%></td>
        <td class="btn "><%= button_to 'Destroy', company_path(company), method: :delete, class: 'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center">
  <nav aria-label="Page navigation">
    <%= will_paginate @companies, class: "pagination" %>
  </nav>
</div>
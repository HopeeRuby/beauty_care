<h1 class="fw-bold d-flex justify-content-center my-5">Danh sách người dùng</h1>
<div class="mb-3">
  <%= link_to 'Danh sách công ty', companies_path, class: "btn btn-primary" %>
</div>
<div class="mb-3">
  <%= link_to 'Thêm mới người dùng', new_user_path, class: "btn btn-success" %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Active</th>
      <th>Company</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.active %></td>
        <td><%= user.company.name %></td>
        <td class="btn "><%= link_to 'Show', user_path(user), class: 'btn btn-primary'%></td>
        <td class="btn "><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-success'%></td>
        <td class="btn "><%= button_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center">
  <nav aria-label="Page navigation">
    <%= will_paginate @users, class: "pagination" %>
  </nav>
</div>
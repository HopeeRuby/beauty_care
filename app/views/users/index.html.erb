<h1 class="text-center" style="color: red;">Users list</h1>

<style>
  table {
    border-collapse: collapse;
    width: 100%;
  }

  th, td {
    text-align: left;
    padding: 8px;
  }

  tr:nth-child(even) {
    background-color: #D6EEEE;
  }
</style>

<div class="col-md-10 col-lg-offset-1">
  <table class="table text-center" style="border: 2px solid black;">
    <tr>
        <th>index</th>
        <th>Name</th>
        <th>Email</th>
        <th>Active</th>
        <th>Company_id</th>
        <th>Delete</th>
    </tr>
      <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.active %></td>
        <td><%= user.company_id %></td>
         <td><%= button_to 'Remove', user_path(user), method: 'delete', data: { confirm: 'Are you sure?' } %></td> 

      </tr>
      <% end %>
  </table>
  </div> 
  <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
</div> 






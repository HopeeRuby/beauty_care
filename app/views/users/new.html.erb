<div class="container">
  <div class="d-flex justify-content-center my-5">
    <h1>Thêm mới người dùng</h1>
  </div>
  <%= form_with model: @user, url: '/users', method: :post do |form| %>
  <div class="form-group">
    <%= form.label :name, class: "form-label" %>:
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :email, class: "form-label" %>:
    <%= form.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group form-check">
    <%= form.label :active, class: "form-check-label" %>:
    <%= form.check_box :active, class: "form-check-input" %>
  </div>
  <div class="form-group">
    <%= form.label :company_id, class: "form-label" %>:
    <%= form.collection_select :company_id, Company.all, :id, :name, { prompt: "Select a company" }, { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= form.submit 'Lưu', class: "btn btn-primary my-3" %>
  </div>
  <% end %>
  <%= link_to 'Quay lại', users_path, class: "btn btn-secondary" %>
</div>

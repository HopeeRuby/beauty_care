<style>
   h1 {
    text-shadow: 2px 2px;
    font-size: 70px;
    text-align: center;
    font-weight: bold;
    color: #BDBDBD;
  }
</style>

<div class="container">
  <div class="row">
    <h1 class="title">EDIT USER</h1>
  </div>
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6">
      <%= form_for @user do |f|%>
      <div class="form-group">
        <%= f.label :Name %>
        <%= f.text_field :name, placeholder: "Enter your name", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :Email %>
          <%= f.email_field :email, placeholder: "Enter your email", class: "form-control" %>
        </div>
        <div class="text-center">
          <%= f.submit "Update", class: "btn btn-info col-lg-12" %>        
        </div>
      <% end %>
    </div>
  </div>
</div>

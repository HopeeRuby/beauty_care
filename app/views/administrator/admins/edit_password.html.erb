<div class="card login-form">
  <div class="card-body-a">
    <h3 class="card-title-a text-center-d">Change password</h3>
    <div class="card-text">
      <%= form_for(@admin, url: change_password_administrator_admin_path(@admin)) do |f| %>
        <div class="form-group-a">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, class: "form-control form-control-sm" %>
        </div>
        <div class="form-group-b">
          <%= f.label :password, "Your new password" %><br />
          <%= f.password_field :password, :autocomplete => "off", class: "form-control form-control-sm" %>
        </div>
        <div class="form-group-c">
          <%= f.label :password_confirmation, "Repeat password" %><br />
          <%= f.password_field :password_confirmation, class: "form-control form-control-sm" %>
        </div>
        <button type="submit" class="btn-d btn-primary-d btn-block submit-btn">Confirm</button>
      <% end %>
    </div>
  </div>
</div>

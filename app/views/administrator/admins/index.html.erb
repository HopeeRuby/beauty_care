<%  content_for :css do %>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">k
<% end %>
<div class="container-fluid">
  <%= render partial: 'shared/partials/page_title' %>
  <div class="row">
    <div class="col-md-12">
      <div class="card mb-3">
        <div class="card-header">
          <div class="d-flex justify-content-between">
            <%= link_to "Add Admins", new_administrator_admin_path, class: "btn btn-danger mb-2 mdi mdi-plus-circle me-2" %>
            <div>
              <button type="button" class="btn btn-success mb-2 me-1"><i class="mdi mdi-cog"></i></button>
              <button type="button" class="btn btn-light mb-2 me-1">Import</button>
              <button type="button" class="btn btn-light mb-2">Export</button>
            </div>
          </div>
        </div>
      </div>
      <div class="table-responsive">
        <div id="products-datatable_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
          <div class="row">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
              <div id="products-datatable_filter" class="dataTables_filter">
              <label>
            <div>
              <%= form_tag administrator_admins_path, method: :get, class: "form-inline my-2 my-lg-0" do %>
                <%= text_field_tag :search, params[:search], class: "form-control mr-sm-2", placeholder: "Search by email or phone ", aria: { label: "Search" } %>
                <%= button_tag "Search", class: "btn btn-outline-success my-2 my-sm-0", type: "submit" %>
              <% end %>
            </div>

          </label>
        </div>
      </div>
    </div>
        </div> 
        <table class="table table-centered table-striped dt-responsive nowrap w-100" id="products-datatable">
          <thead>
            <tr>
              <th>STT</th>
              <th>FirstName</th>
              <th>LastName</th>
              <th>Phone</th>
              <th>Email</th>
              <th>Role</th>
              <th>Status</th>
              <th>Create Date</th>
              <th style="width: 75px;">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @admins.each_with_index do |admin, index| %>
              <tr>
                <td><%= create_index params[:page], index, 10 %></td>
                <td><%= admin.first_name %></td>
                <td><%= admin.last_name %></td>
                <td><%= admin.phone %></td>
                <td><%= admin.email %></td>
                <td><%= admin.role %></td>
                <td><%= admin.status %></td>
                <td><%= admin.created_at.strftime("%m/%d/%Y") %></td>
                <td class="table-action">
                  <div class="d-flex">
                    <%= link_to '', administrator_admin_path(admin), class: 'action-icon mdi mdi-eye me-2' %>
                    <%= link_to '', edit_administrator_admin_path(admin), class: 'action-icon mdi mdi-square-edit-outline me-2' %>
                    <%= button_to '', administrator_admin_path(admin), method: :delete, data: { confirm: 'Are you sure?' }, class: 'action-icon mdi mdi-delete me-2', style: 'background:none; border:none;' %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="flickr_pagination d-flex justify-content-between">
          <div class="page_info">
            <%= page_entries_info @admins %>
          </div>
          <div>
            <%= will_paginate @admins, :container => false %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

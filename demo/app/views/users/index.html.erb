<h1 class="text-center" style="color: red;">Users list</h1>
<p class= "text-center" style></p>
<div class="text-center"><%= link_to 'New User', new_user_path %></div><br>
<div class="col-md-10 col-lg-offset-1">
  <table class="table text-center" style="border: 2px solid black;">
    <tr class="bg-primary">
      <th class="text-center col-md-1">Index</th>
      <th class="text-center col-md-3">Name</th>
      <th class="text-center col-md-2">Email</th>
      <th class="text-center col-md-3">Show</th>
      <th class="text-center col-md-3">Edit</th>
      <th class="text-center col-md-3">Remove</th>
    </tr>
      <% @users.each_with_index do |user, index| %>
        <tr class="bg-success">
          <td><%= index %></td>
          <td scope="row"><%= user.name %></td>
          <td scope="row"><%= user.email %></td>
          <td scope="row"><%= link_to 'Show', user %></td>
          <td scope="row"><%= link_to 'Edit', edit_user_path(user) %></td>
          <td scope="row"><%= button_to 'Remove', user_path(user), method: 'delete', data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
  </table>
  <%= will_paginate @users %>
</div>



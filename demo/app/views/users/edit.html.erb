<div class = 'container-fluid'>  
  <h1 class = "text-center">Edit User</h1>
  </br>
  <%= form_for @user do |f|%>
  <div class = 'form-group'>
    <%= f.label :Name, class: 'form-label'%><br>
    <%= f.text_field :name, class: 'form-control'%><br>
  </div>
  <div class = 'form-group'>
    <%= f.label :Email, class: 'form-label'%><br>
    <%= f.text_field :email, class: 'form-control'%><br>
  </div>
  <div class = 'form-group'>
    <%= f.label :company_id, class: 'form-label'%>:<br>
    <%= f.collection_select :company_id, Company.all, :id, :name, {prompt: 'select company'},{class: 'form-control'} %>
  </div>
  <div>
    <%= f.submit 'Update Your User', class: 'btn btn-primary my-3'  %>
  </div>
  <%end%>
</div>

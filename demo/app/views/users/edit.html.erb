<h1>Edit User</h1>
<%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>
  <%= f.label :Name%><br>
  <%= f.text_field :name%><br>
  <%= f.label :Email%><br>
  <%= f.text_field :email%><br>
  <%= f.label :company_id %>:<br>
  <%= f.collection_select :company_id, Company.all, :id, :name %><br><br>
  <%= f.submit "Update your user" %>
<% end %>

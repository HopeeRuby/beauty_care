  <% flash.each do |type, msg| %>
    <div id = "alert", class='alert alert-danger'>
      <%= msg %>
    </div>
  <% end %>
<div class = 'container-fluid'>
  <% if @user.errors.any? %>
    <div class='alert alert-warning' >
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h1>Sign Up</h1>
  </br>
    <%= form_for @user do |f|%>
    <div class = 'form-group'>
      <%= f.label :Name, class: 'form-label'%><br>
      <%= f.text_field :name, class: 'form-control'%><br>
    </div>
    <div class = 'form-group'>
      <%= f.label :Email, class: 'form-label'%><br>
      <%= f.text_field :email, class: 'form-control'%><br>
    </div>
    <div class = 'form-group'>
      <%= f.label :company_id, class: 'form-label'%>:<br>
      <%= f.collection_select :company_id, Company.all, :id, :name, {prompt: 'select company'} ,{class: 'form-control'} %>
      <br><br
    </div>
    <div>
      <%= f.submit 'Create Your User', class: 'btn btn-primary my-3'  %>
    </div>
    <%end%>
  </div>
</div>